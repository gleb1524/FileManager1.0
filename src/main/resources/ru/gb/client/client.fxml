<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="TOP_CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.gb.client.ClientController">
   <children>
      <HBox fx:id="startWindow" VBox.vgrow="NEVER">
         <TextField fx:id="exp" visible="false"/>
         <VBox>
            <Label text="Login" />
            <TextField fx:id="login" promptText="Login"/>
         </VBox>
         <VBox>
            <Label text="Password"/>
            <PasswordField fx:id="password" promptText="Password"/>
         </VBox>
         <VBox alignment="BOTTOM_CENTER">
            <Button fx:id="auth" text="Auth" onAction="#pressToAuth"/>
         </VBox>
         <VBox alignment="BOTTOM_CENTER">
            <Button fx:id="reg" text="Registration" onAction="#pressToReg"/>
         </VBox>

      </HBox>



   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
